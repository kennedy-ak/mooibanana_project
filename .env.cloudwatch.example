# ==============================================
# AWS CloudWatch Logging Configuration
# ==============================================
# Copy these lines to your .env file and fill in your AWS credentials

# Enable/Disable CloudWatch logging (True/False)
AWS_CLOUDWATCH_ENABLED=False

# AWS Region where logs will be stored
# Options: us-east-1, us-west-2, eu-west-1, eu-central-1, ap-southeast-1, etc.
AWS_REGION_NAME=us-east-1

# AWS Access Key ID (from IAM user)
AWS_ACCESS_KEY_ID=

# AWS Secret Access Key (from IAM user)
AWS_SECRET_ACCESS_KEY=

# CloudWatch Log Group name (logs will be organized under this group)
CLOUDWATCH_LOG_GROUP=mooibanana-app

# ==============================================
# Quick Setup Instructions:
# ==============================================
# 1. Create IAM user in AWS Console with CloudWatchLogsFullAccess policy
# 2. Generate access key for the IAM user
# 3. Copy the Access Key ID and Secret Access Key here
# 4. Set AWS_CLOUDWATCH_ENABLED=True
# 5. Restart your Django application
#
# Logs will appear in: AWS Console → CloudWatch → Log groups → mooibanana-app
#
# See CLOUDWATCH_SETUP.md for detailed instructions
